<div class="container">

  <h1><%= @restaurant.name %></h1>
  <h3><%= @restaurant.category %></h3>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>


  <h3>Reviews</h3>
  <% reviews = Review.where(restaurant: @restaurant) %>
  <% reviews.each do |r| %>
  <h5><%= r.rating %></h5>
  <p><%= r.content %></p>
  <% end %>


</div>
